{
  "manifest_version": 2,

  "name": "botb random vote",
  "version": "1.0",
  "description": "takes you to a random unvoted entry from major battles",

  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
  },

  "browser_action": {
      "default_title": "VOTE!"
  },

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },

  "permissions": [
      "activeTab",
      "tabs",
      "notifications",
      "http://*/",
      "https://*/"
  ]
}
